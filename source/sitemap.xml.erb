<% base_url = "http://flsilva.com/" %>
<% pages = sitemap.resources.find_all{|p| p.source_file.match(/\.slim/) } %>
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
<%
  pages.each do |p|
  changefreq = p.data.changefreq || "monthly"
  priority = p.data.priority || "0.5"
%>
  <url>
    <loc><%= base_url + p.destination_path.gsub('index.html','') %></loc>
    <lastmod><%= File.new(p.source_file).mtime.to_date %></lastmod>
    <changefreq><%= changefreq %></changefreq>
    <priority><%= priority %></priority>
  </url>
<% end %>
</urlset>
