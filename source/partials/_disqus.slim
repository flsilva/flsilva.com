#disqus_thread

- disqus_id = "/blog/" << current_page.title.downcase.gsub(" - ", "-")
- disqus_id = disqus_id.gsub(" ", "-")
- disqus_id = disqus_id.gsub(/[^-\/0-9A-Za-z]/, '')
- disqus_url = "http://flsilva.com" << disqus_id

javascript:
  /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
  var disqus_shortname = 'flsilva'; // required: replace example with your forum shortname
  var disqus_identifier = '#{disqus_id}';
  var disqus_url = '#{disqus_url}';

  /* * * DON'T EDIT BELOW THIS LINE * * */
  (function() {
    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
    dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
  })();
